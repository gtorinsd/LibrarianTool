<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.udelphi.trainingcenter.librariantool.FragmentCatalogEdit"
    android:orientation="vertical"
    android:paddingBottom="2dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="textPersonName"
            android:id="@+id/FragmentEditTextCatalog"
            style="@style/SimpleEditTextStyle"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/FragmentImageButtonCatalogOk"
                android:src="@drawable/check"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:layout_gravity="center"
                style="@style/ImageButtonStyle" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/FragmentImageButtonCatalogCancel"
                android:src="@drawable/undo"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:layout_gravity="center"
                style="@style/ImageButtonStyle" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
